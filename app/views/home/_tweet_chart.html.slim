.chart#tweet_chart
- content_for(:javascript) do
  javascript:
    var chart;
    $(document).ready(function() {
       chart = new Highcharts.Chart({
          chart: {
            renderTo: 'tweet_chart',
            defaultSeriesType: 'line'
          },
          title: {
            text: 'Tweets by Month',
          },
          xAxis: {
            categories: [ #{format_tweet_stats(@tweet_stats).map{|s| "'#{s['month']}'"}.join(', ')} ],
            labels: {
              rotation: -45,
              align: 'right'
            },
          },
          yAxis: {
            min: 0,
            title: {
              text: null
            }
          },
          tooltip: {
            formatter: function() {
              return this.y + (this.y != 1 ? ' tweets' : ' tweet') + ' in ' + this.x;
            }
          },
          legend: {
            enabled: false
          },
          credits: {
            enabled: false
          },
          series: [{
            name: 'Tweets',
            data: [ #{format_tweet_stats(@tweet_stats).map{|s| s['count_all']}.join(', ')} ]
          }]
       });
    });
